@model _5051.Models.StudentModel

<!-- Display a valid student name if we have one. -->
@if (Model != null)
{
    <h2 class="text-center"> Attendance History: @Model.Name</h2>
} else
{
    <!-- For demo purposes, default to this guy in case we don't get a valid model. -->
    <h2 class="text-center"> Attendance History: Jim Jimmerson</h2>
}

<!-- Sample implementation for a "better" back button. It doesn't hardcode the previous controller. -->
@Html.ActionLink("Back", null, null, null, new { href = Request.UrlReferrer, @class = "btn btn-primary" })

<script>
    window.onload = function () {
        var chart1 = new CanvasJS.Chart("chartContainer1", {
            theme: "theme2",
            animationEnabled: true,
            title: {
                text: "Total Attendance",
                fontSize: 18
            },

            axisX: {
                title: "Days",
                titleFontSize: 18,
                crosshair: {
                    enabled: true,
                    snapToDataPoint: true
                }
            },
            axisY: {
                title: "Hours Attended",
                titleFontSize: 18
            },
            data: [
                {
                    type: "line", //change type to bar, line, area, pie, etc
                    dataPoints: [
                        { x: 0, y: 0 },
                        { x: 10, y: 70 },
                        { x: 30, y: 120 },
                        { x: 40, y: 150 },
                        { x: 50, y: 200 },
                        { x: 60, y: 240 },
                        { x: 70, y: 270 },
                        { x: 80, y: 300 },
                        { x: 90, y: 355 }
                    ]
                },

            ]
        });
        var chart2 = new CanvasJS.Chart("chartContainer2", {
            theme: "theme2",
            animationEnabled: true,
            title: {
                text: "Cumulative Experience",
                fontSize: 18
            },

            axisX: {
                title: "Days",
                titleFontSize: 18
                
            },
            axisY: {
                title: "Level",
                titleFontSize: 18,
                minimum: 1,
                maximum: 5,
                interval: 1,
                stripLines: [
                    {
                        startValue: 2,
                        endValue: 3,
                        opacity: .25,
                        color: "#00e600",
                    },
                    {
                        startValue: 3,
                        endValue: 4,
                        opacity: .25,
                        color: "#0039e6",
                    },
                    {
                        startValue: 4,
                        endValue: 5,
                        opacity: .25,
                        color: "#e60000",
                    }
                ],
            },
            data: [
                {
                    type: "line", //change type to bar, line, area, pie, etc
                    dataPoints: [
                        { x: 0, y: 1 },
                        { x: 10, y: 1.75 },
                        { x: 30, y: 2 },
                        { x: 40, y: 2.25 },
                        { x: 50, y: 2.6 },
                        { x: 60, y: 2.8 },
                        { x: 70, y: 3.0 },
                        { x: 80, y: 3.1 },
                        { x: 90, y: 3.3 }
                    ]
                },

            ]
        });
        chart1.render();
        chart2.render();
    };
</script>

<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Week</th>
                <th class="text-center">Monday</th>
                <th class="text-center">Tuesday</th>
                <th class="text-center">Wednesday</th>
                <th class="text-center">Thursday</th>
                <th class="text-center">Friday</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>This Week</td>
                <td class="red-x"><span class="glyphicon glyphicon-remove"></span></td>
                <td class="green-check"><span class="glyphicon glyphicon-ok"></span></td>
                <td class="green-check"><span class="glyphicon glyphicon-ok"></span></td>
                <td class="green-check"><span class="glyphicon glyphicon-ok"></span></td>
                <td></td>
                <td></td>
            </tr>
            <tr>
                <td>Week 3</td>
                
                <td class="green-check"><span class="glyphicon glyphicon-ok"></span></td>
                <td class="green-check"><span class="glyphicon glyphicon-ok"></span></td>
                <td class="red-x"><span class="glyphicon glyphicon-remove"></span></td>
                <td class="green-check"><span class="glyphicon glyphicon-ok"></span></td>
                <td class="orange-alert"><span class="glyphicon glyphicon-warning-sign"></span></td>
                <td></td>
            </tr>
            <tr>
                <td>Week 2</td>
                <td class="red-x"><span class="glyphicon glyphicon-remove"></span></td>
                <td class="green-check"><span class="glyphicon glyphicon-ok"></span></td>
                <td class="green-check"><span class="glyphicon glyphicon-ok"></span></td>
                <td class="green-check"><span class="glyphicon glyphicon-ok"></span></td>
                <td class="green-check"><span class="glyphicon glyphicon-ok"></span></td>
                <td></td>
            </tr>
            <tr>
                <td>Week 1</td>
                <td class="green-check"><span class="glyphicon glyphicon-ok"></span></td>
                <td class="red-x"><span class="glyphicon glyphicon-remove"></span></td>
                <td class="green-check"><span class="glyphicon glyphicon-ok"></span></td>
                <td class="orange-alert"><span class="glyphicon glyphicon-warning-sign"></span></td>
                <td class="green-check"><span class="glyphicon glyphicon-ok"></span></td>
                <td></td>
            </tr>

        </tbody>
    </table>
</div>
<div class="container-responsive">
    <div class="row">
        <div class="col-md-6">
            <div id="chartContainer1" class="student-report-graph"></div>
        </div>
        <div class="col-md-6">
            <div id="chartContainer2" class="student-report-graph"></div>
        </div>
    </div>
</div>


<div id="chartContainer">
    <script>
        window.onload = function () {
            var chart = new CanvasJS.Chart("chartContainer", {
                theme: "theme2",
                animationEnabled: true,
                title: {
                    text: "Cumulative Experience"
                },
               
                axisX: {
                    title: "Days",
                    crosshair: {
                        enabled: true,
                        snapToDataPoint: true
                    }
                },
                axisY: {
                    title: "Level",
                    minimum: 1,
                    maximum: 5,
                    tickLength: 1,
                    stripLines: [
                        {
                            startValue: 2,
                            endValue: 3,
                            opacity: .25,
                            color: "#00e600",
                        },
                        {
                            startValue: 3,
                            endValue: 4,
                            opacity: .25,
                            color: "#0039e6",
                        },
                        {
                            startValue: 4,
                            endValue: 5,
                            opacity: .25,
                            color: "#e60000",
                        }
                    ],
                },
                data: [
                    {
                        type: "line", //change type to bar, line, area, pie, etc
                        dataPoints: [
                            { x: 0, y:1 },
                            { x: 10, y: 1.75 },
                            { x: 30, y: 2 },
                            { x: 40, y: 2.25 },
                            { x: 50, y: 2.6 },
                            { x: 60, y: 2.8 },
                            { x: 70, y: 3.0 },
                            { x: 80, y: 3.1 },
                            { x: 90, y: 3.3 }
                        ]
                    },
                    
                ]
            });
            chart.render();
        };
    </script>
</div>
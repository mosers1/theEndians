@Html.ActionLink("All Achievements", "Achievements", null, new { @class = "btn btn-primary" })
<div>
    <div class="studentheader3">
        Level <span class="darkBlue">3 </span>Attender
    </div>
</div>
<div>
    <h4 style="text-align:center">Progress to Next Level:</h4>
</div>
<div class="container-fluid">
    <div class="row">
        <div class="reportColMd2" style="text-align: right">
            <span class="show">XP</span>
        </div>
        <div class="col-md-8" style="padding:0px 0px">
            <div class="progress progress-striped active">
                <div class="progress-bar" role="progressbar" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100" style="width: 75%">
                    <span class="show" style="text-align: right; padding-right: 10px">75%</span>
                </div>
            </div>
        </div>
        <div class="col-md-1 nopadding" style="text-align: left">
            <span class="show">270/360</span>
        </div>

    </div>

</div>


<h2 class="sub-header">This Week's Attendance</h2>

@{
    ViewBag.Title = "Web Student Report For Jim Jimmerson";
}
<style>
    h2 {
        text-align: center;
    }

    th, td {
        text-align: center;
    }

    th {
        background-color: #435AAF;
        color: white
    }
</style>
<h2>@ViewBag.Title</h2>
<!--jumbotron here-->


@Html.ActionLink("Attendance History", "StudentHistory", null, new { @class = "btn btn-success" })

@model _5051.Models.StudentCheckinViewModel

@{
    ViewBag.Title = "Kiosk Check In / Out";
}

<!-- TODO: Add real functionality to this page... -->
<h1 class="text-center">Kiosk Check In / Out</h1>

<br />

<div class="container">

    @foreach (var item in Model.CheckinList)
    {
        <a id="@item.Id" href="#"  data-toggle="modal" data-target="#myModal">
            <div class="col-sm-2">
                <span>
                    @item.Name
                </span>
                <br />
                <img src="~/Content/images/@item.Uri" width="75" height="75" />
            </div>
        </a>
     }

</div>



<div id="myModal" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">You have checked in!</h4>
            </div>
            <div class="modal-body">
                <p>You have earn 10 points from checking in!</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>

    </div>
</div>



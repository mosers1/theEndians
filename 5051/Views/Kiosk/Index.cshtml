@model _5051.Models.StudentViewModel

<div id="kiosk-container" class="attendify-panel">
    <h1 id="kiosk-title" class="attendify-panel-title">Kiosk Check In / Out</h1>
    <br />
    <div class="container">
        @foreach (var student in Model.StudentList)
        {
            if (student.IsActive == true)
            {
                <a id="@student.Username" href="~/Kiosk/Update/@student.Id">
                    <div class="kiosk-avatar col-sm-2 icons">
                        <!-- Change avatar opacity based on student login status -->
                        @if (@student.LoginStatus == @_5051.Models.StudentLoginStatusEnum.In)
                        {
                            <span>@student.Username</span>
                            <br />
                            <img src="~/Content/images/@student.AvatarId" width="75" height="75" alt="No not found image! :(" />
                        }
                        else
                        {
                            <span class="checked-out">@student.Username</span>
                            <br />
                            <img class="checked-out" src="~/Content/images/@student.AvatarId" width="75" height="75" alt="No not found image! :(" />
                        }
                    </div>
                </a>
            }
        }
    </div>
</div>
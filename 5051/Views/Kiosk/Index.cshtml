@model _5051.Models.StudentViewModel

@{
    ViewBag.Title = "Kiosk Check In / Out";
}

<!-- TODO: Add real functionality to this page... -->
<h1 class="text-center">Kiosk Check In / Out</h1>

<br />

<div class="container">
    @foreach (var student in Model.StudentList)
    {
        if (student.IsActive == true)
        {
        <a id="@student.Name" href="~/Kiosk/Update/@student.Id">
            <div class="col-sm-2 icons">
                <span>
                    @student.Name
                </span>
                <br />
                <!-- Change avatar opacity based on student login status -->
                @if(@student.LoginStatus == @_5051.Models.StudentLoginStatusEnum.In)
                {
                <img src="~/Content/images/@student.AvatarId" width="75" height="75" alt="No not found image! :(" class="checked-in" />
                } else
                {
                <img src="~/Content/images/@student.AvatarId" width="75" height="75" alt="No not found image! :(" />
                }

            </div>
        </a>
        }
    }
</div>
